{
  "compilerOptions": {
    "allowJs": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react",
    "target": "es2016",
    "baseUrl": "../"
  },
  "paths": {
    "@heathmont/moon-*": ["./packages/*/src", "./docs/src"]
  },
  "exclude": ["node_modules"]
}
